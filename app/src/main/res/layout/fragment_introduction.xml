<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:layout_margin="5dp"
    android:orientation="vertical"
    tools:context=".Fragments.IntroductionFragment">


    <TextView
        android:padding="4dp"
        android:id="@+id/selected_book_desc"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="2"
        android:fontFamily="@font/latoregular"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="15sp"
        android:text="color hex is easy to use tool to get he color codes information color color hex is easy to use tool to get the color codes information colo hex is easy toormation" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp">

        <com.travijuu.numberpicker.library.NumberPicker
            android:id="@+id/number_picker"
            android:layout_width="130dp"
            android:layout_height="36dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="16dp"
            app:min="0"
            app:unit="1"
            app:focusable="false" />

        <Button

            android:id="@+id/addtocart"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:textAllCaps="false"
            android:layout_margin="18dp"
            android:fontFamily="@font/latobold"
            android:text="Add to Cart"
            android:textColor="#fff"
            android:background="@color/colorAccent"
            android:layout_marginBottom="16dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer Who Brought This Product Also Brought"
        android:textStyle="bold"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:fontFamily="@font/latoblack"
        android:textColor="@android:color/black"
        android:textSize="20dp"/>


    <it.sephiroth.android.library.widget.HListView
        android:id="@+id/best_selling_list"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>

