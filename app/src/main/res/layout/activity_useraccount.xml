<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UseraccountActivity">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#00BCD4">

            <EditText

                android:layout_width="wrap_content"
                android:id="@+id/name"
                android:layout_height="wrap_content"
                android:text="Hemanth U M"
                android:textSize="36sp"
                android:textColor="#ffffff"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="24dp"
                android:fontFamily="@font/latoregular">

            </EditText>

        </LinearLayout>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="24sp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold">

        </TextView>

        <LinearLayout
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="36dp"
                android:src="@drawable/mail"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp">

            </ImageView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="16sp"
                    android:fontFamily="@font/latoregular">

                </TextView>
                <EditText
                    android:id="@+id/entermail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter Your Email"
                    android:textSize="20sp"
                    android:layout_marginTop="4dp"
                    android:textColor="#000000"
                    android:background="@null"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/latoregular"
                    >

                </EditText>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="39dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/location">

            </ImageView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textSize="16sp"
                    android:fontFamily="@font/latoregular">

                </TextView>
                <TextView
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="India"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:fontFamily="@font/latoregular">

                </TextView>
                <EditText
                    android:id="@+id/enterflat"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Flat/Home/Building"
                    android:textColor="#000000"
                    android:background="@null"
                    android:textSize="20sp"
                    android:fontFamily="@font/latoregular">

                </EditText>
                <EditText
                    android:id="@+id/enterlandmark"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Landmark"
                    android:textColor="#000000"
                    android:background="@null"
                    android:textSize="20sp"
                    android:fontFamily="@font/latoregular">

                </EditText>
                <EditText
                    android:id="@+id/enterarea"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Area"
                    android:textColor="#000000"
                    android:background="@null"
                    android:textSize="20sp"

                    android:fontFamily="@font/latoregular">

                </EditText>
                <EditText
                    android:id="@+id/entercity"
                    android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="City"
                android:textColor="#000000"
                android:background="@null"
                android:textSize="20sp"
                android:fontFamily="@font/latoregular">

            </EditText>
                <EditText
                    android:id="@+id/enterzipcode"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Zipcode"
                    android:textColor="#000000"
                    android:background="@null"
                    android:textSize="20sp"
                    android:fontFamily="@font/latoregular">

                </EditText>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <Button
                android:id="@+id/btnsave"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/button_shape"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="44dp"
                android:text="Save"
                android:textColor="#ffffff"
                android:fontFamily="@font/latoregular"
                android:layout_marginBottom="8dp">

            </Button>
            
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>