<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <androidx.cardview.widget.CardView
        android:id="@+id/bestSellerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/best_seller_image_single"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/best_seller_bookName_single"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="12sp"
                android:maxLines="1"
                android:fontFamily="@font/montserrat_regular"
                android:text="Hello World by india"
                android:textColor="@android:color/black" />



            <TextView
                android:id="@+id/best_seller_price_single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs.360/-"
                android:layout_marginStart="8dp"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/best_seller_bookDesc_single"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:textSize="10sp"
                android:maxLines="1"
                android:fontFamily="@font/montserrat_regular"
                android:text="Hello World by india"
                android:textColor="@android:color/darker_gray" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>