<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/bestSellerCard"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/white">

        <ImageView
            android:id="@+id/best_seller_image_single"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="12dp">



        <TextView
            android:id="@+id/best_seller_price_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs.360/-"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:fontFamily="@font/latoblack"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/best_seller_bookName_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:maxLines="1"
            android:fontFamily="@font/latobold"
            android:text="Hello World by india"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/darker_gray" />


    </LinearLayout>

</LinearLayout>