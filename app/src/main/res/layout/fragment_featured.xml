<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:orientation="vertical"
    tools:context=".Fragments.BestSellingFragment">


    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/featuredFragmentAnimation"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="match_parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_centerInParent="true"
            app:lottie_rawRes="@raw/empty" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@android:color/black"
            android:layout_margin="24dp"
            android:layout_centerHorizontal="true"
            android:text="No Books found in this category."/>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/featuredFragmentLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sub_category_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Loading Books"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"/>

        <GridView
            android:id="@+id/featuredGridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:layout_marginTop="24dp"
            android:background="@android:color/transparent"
            android:horizontalSpacing="16dp"
            android:numColumns="2"
            android:verticalSpacing="16dp" />

    </LinearLayout>




</FrameLayout>